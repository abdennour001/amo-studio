<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:paddingTop="10sp"
        android:paddingBottom="7sp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/welcometoamokstudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:textColor="@color/colorPrimary"
                android:text="Welcome to "
                android:layout_gravity="center_horizontal">
            </TextView>

            <ImageView
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:background="@drawable/amo3"
                android:contentDescription="image" />

        </LinearLayout>


        <TextView
            android:id="@+id/amokstudiodesc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/desc_text"
            android:layout_marginTop="15sp">
        </TextView>
        <TextView
            android:id="@+id/joinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_marginTop="5sp">
        </TextView>

        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_marginTop="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/learnmorebtn"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonstylepink"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn more"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"/>

            <Button
                android:id="@+id/joinusbtn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/combine1"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join US"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <!-- Login progress -->
        <ProgressBar
            android:theme="@style/MyProgressBar"
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:progress="5"
            android:visibility="visible" />


        <EditText
            android:id="@+id/usernametext"
            android:layout_marginTop="30dp"
            android:drawablePadding="15sp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_height="wrap_content"
            android:layout_width="280sp"
            android:hint="User name"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"></EditText>

        <EditText
            android:id="@+id/passwordtext"
            android:layout_marginTop="15sp"
            android:drawablePadding="15sp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_height="wrap_content"
            android:layout_width="280sp"
            android:hint="Your password"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"></EditText>

        <Button
            android:id="@+id/signinbtn"
            android:drawablePadding="10sp"
            android:drawableRight="@drawable/ic_send_black_24dp"
            android:layout_marginTop="35sp"
            android:layout_height="wrap_content"
            android:layout_width="130sp"
            android:background="@drawable/buttonstylepink"
            android:text="Login in"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            style="?android:textAppearanceSmall"
            />


        <TextView
            android:id="@+id/copyrighttext"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Copyright Â© All Rights Reserved 2017"
            android:layout_gravity="center_horizontal">
        </TextView>


    </LinearLayout>

</LinearLayout>
