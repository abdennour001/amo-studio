<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.amostudio.JoinActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:padding="15sp"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    style="?android:textAppearanceSmall"
                    android:id="@+id/welcometoamokstudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:paddingBottom="15sp"
                    android:paddingTop="5sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:text="Join "
                    android:layout_gravity="center">
                </TextView>

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="150dp"
                    android:background="@drawable/amo3"
                    android:contentDescription="image" />

                <TextView
                    style="?android:textAppearanceSmall"
                    android:id="@+id/welcometoamokstudio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:paddingBottom="15sp"
                    android:paddingTop="5sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:text=" Now"
                    android:layout_gravity="center">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/hiamokstudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10sp"
                android:textColor="@color/colorPrimary"
                android:text='" DESIGN IS MORE THAN\nA LOGO. DESIGN IS A\nSTRATEGY MADE\nVISIBLE. "'
                android:layout_gravity="center"
                style="?android:textAppearanceLarge"
                >
            </TextView>

            <Button
                android:id="@+id/returnbtn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/combine1"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Return to main page"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <!-- Login progress -->
            <ProgressBar
                android:theme="@style/MyProgressBar"
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:progress="5"
                android:visibility="visible" />

            <EditText
                android:layout_marginTop="20sp"
                android:id="@+id/usernametext"
                android:drawablePadding="15sp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_height="wrap_content"
                android:layout_width="280sp"
                android:hint="User name"
                android:inputType="text"></EditText>

            <EditText
                android:id="@+id/emailtext"
                android:layout_marginTop="12dp"
                android:drawablePadding="15sp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_height="wrap_content"
                android:layout_width="280sp"
                android:hint="Email"
                android:inputType="textEmailAddress"></EditText>

            <EditText
                android:id="@+id/passwordtext"
                android:layout_marginTop="12dp"
                android:drawablePadding="15sp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:layout_height="wrap_content"
                android:layout_width="280sp"
                android:hint="Password"
                android:inputType="textPassword"></EditText>

            <EditText
                android:id="@+id/confirmpasswordtext"
                android:layout_marginTop="12dp"
                android:drawablePadding="15sp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/ic_confirmation_number_black_24dp"
                android:layout_height="wrap_content"
                android:layout_width="280sp"
                android:hint="Confirm password"
                android:inputType="textPassword"></EditText>


            <Button
                android:id="@+id/signupbtn"
                android:drawablePadding="10sp"
                android:drawableRight="@drawable/ic_send_black_24dp"
                android:layout_marginTop="24sp"
                android:layout_height="wrap_content"
                android:layout_width="140sp"
                android:background="@drawable/buttonstylepink"
                android:text="JOIN NOW"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Already have an account? "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:linksClickable="true"
                    android:autoLink="all"
                    android:text="Sign in"/>

                </LinearLayout>

        </LinearLayout>


        </LinearLayout>



</LinearLayout>
